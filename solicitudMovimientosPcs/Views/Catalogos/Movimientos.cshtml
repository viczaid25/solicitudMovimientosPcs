@model IEnumerable<solicitudMovimientosPcs.Models.Catalogs.PcMovimientosCodMovimiento>
@{
    ViewData["Title"] = "Catálogo de Códigos de Movimiento";
}
<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <span><i class="fas fa-exchange-alt me-2"></i>Cod. Movimiento</span>
        <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#mdlNew">
            <i class="fas fa-plus me-1"></i> Nuevo
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tbl" class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>PRC</th>
                        <th>RSN</th>
                        <th>Contenido</th>
                        <th style="width:110px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model ?? Enumerable.Empty<solicitudMovimientosPcs.Models.Catalogs.PcMovimientosCodMovimiento>())
                    {
                        <tr>
                            <td>@m.PrcId</td>
                            <td>@m.RsnCd</td>
                            <td>@m.Content</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary"
                                        data-bs-toggle="modal" data-bs-target="#mdlEdit"
                                        data-prc="@m.PrcId" data-rsn="@m.RsnCd" data-content="@m.Content">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form class="d-inline" asp-action="DeleteMovimiento" method="post"
                                      asp-route-prc="@m.PrcId" asp-route-rsn="@m.RsnCd"
                                      onsubmit="return confirm('¿Eliminar PRC @m.PrcId / RSN @m.RsnCd?');">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Nuevo -->
<div class="modal fade" id="mdlNew" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="CreateMovimiento">
                @Html.AntiForgeryToken()
                <div class="modal-header"><h5 class="modal-title">Nuevo movimiento</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body vstack gap-3">
                    <div><label class="form-label req">PRC</label><input name="PrcId" class="form-control" required maxlength="10" /></div>
                    <div><label class="form-label req">RSN</label><input name="RsnCd" class="form-control" required maxlength="10" /></div>
                    <div><label class="form-label">Contenido</label><input name="Content" class="form-control" maxlength="150" /></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Editar -->
<div class="modal fade" id="mdlEdit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="EditMovimiento">
                @Html.AntiForgeryToken()
                <div class="modal-header"><h5 class="modal-title">Editar movimiento</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body vstack gap-3">
                    <input type="hidden" name="PrcId" id="ePrc" />
                    <input type="hidden" name="RsnCd" id="eRsn" />
                    <div><label class="form-label">Contenido</label><input name="Content" id="eContent" class="form-control" maxlength="150" /></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function(){
          if (window.jQuery && $.fn.DataTable) {
            $('#tbl').DataTable({responsive:true, pageLength:25, language:{url:'https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-MX.json'}});
          }
          const mdlEdit=document.getElementById('mdlEdit');
          mdlEdit.addEventListener('show.bs.modal',e=>{
            const b=e.relatedTarget;
            document.getElementById('ePrc').value=b.getAttribute('data-prc');
            document.getElementById('eRsn').value=b.getAttribute('data-rsn');
            document.getElementById('eContent').value=b.getAttribute('data-content')||'';
          });
        })();
    </script>
    <style>
        .req::after {
            content: " *";
            color: #dc3545;
            font-weight: 700
        }</style>
}
