@model IEnumerable<solicitudMovimientosPcs.Models.Catalogs.PcMovimientosCodigoLinea>
@{
    ViewData["Title"] = "Catálogo de Líneas/Áreas";
}
<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <span><i class="fas fa-code-branch me-2"></i>Líneas / Áreas</span>
        <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#mdlNew">
            <i class="fas fa-plus me-1"></i> Nueva línea
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tbl" class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th style="width:110px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model ?? Enumerable.Empty<solicitudMovimientosPcs.Models.Catalogs.PcMovimientosCodigoLinea>())
                    {
                        <tr>
                            <td>@x.AreaCode</td>
                            <td>@x.AreaName</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary"
                                        data-bs-toggle="modal" data-bs-target="#mdlEdit"
                                        data-code="@x.AreaCode" data-name="@x.AreaName">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form class="d-inline" asp-action="DeleteLinea" method="post" asp-route-id="@x.AreaCode"
                                      onsubmit="return confirm('¿Eliminar la línea @x.AreaCode?');">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Nuevo -->
<div class="modal fade" id="mdlNew" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="CreateLinea">
                @Html.AntiForgeryToken()
                <div class="modal-header"><h5 class="modal-title">Nueva línea</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body vstack gap-3">
                    <div>
                        <label class="form-label req">Código</label>
                        <input name="AreaCode" class="form-control" required maxlength="20" />
                    </div>
                    <div>
                        <label class="form-label req">Nombre</label>
                        <input name="AreaName" class="form-control" required maxlength="80" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Editar -->
<div class="modal fade" id="mdlEdit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="EditLinea">
                @Html.AntiForgeryToken()
                <div class="modal-header"><h5 class="modal-title">Editar línea</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body vstack gap-3">
                    <input type="hidden" name="AreaCode" id="eCode" />
                    <div>
                        <label class="form-label req">Nombre</label>
                        <input name="AreaName" id="eName" class="form-control" required maxlength="80" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function(){
          if (window.jQuery && $.fn.DataTable) {
            $('#tbl').DataTable({responsive:true, pageLength:25, language:{url:'https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-MX.json'}});
          }
          const mdlEdit = document.getElementById('mdlEdit');
          mdlEdit.addEventListener('show.bs.modal', e=>{
            const b = e.relatedTarget;
            document.getElementById('eCode').value = b.getAttribute('data-code');
            document.getElementById('eName').value = b.getAttribute('data-name') || '';
          });
        })();
    </script>
    <style>
        .req::after {
            content: " *";
            color: #dc3545;
            font-weight: 700
        }</style>
}
