@model IEnumerable<solicitudMovimientosPcs.Models.Catalogs.PcMovimientosUbicacion>
@{
    ViewData["Title"] = "Catálogo de Ubicaciones";
}
<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <span><i class="fas fa-map-marker-alt me-2"></i>Ubicaciones</span>
        <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#mdlNew">
            <i class="fas fa-plus me-1"></i> Nueva ubicación
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tbl" class="table table-hover align-middle">
                <thead class="table-light"><tr><th>Ubicación</th><th>Área</th><th style="width:110px"></th></tr></thead>
                <tbody>
                    @foreach (var u in Model ?? Enumerable.Empty<solicitudMovimientosPcs.Models.Catalogs.PcMovimientosUbicacion>())
                    {
                        <tr>
                            <td>@u.Ubicacion</td>
                            <td>@u.Area</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary"
                                        data-bs-toggle="modal" data-bs-target="#mdlEdit"
                                        data-ubic="@u.Ubicacion" data-area="@u.Area">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form class="d-inline" asp-action="DeleteUbicacion" method="post" asp-route-id="@u.Ubicacion"
                                      onsubmit="return confirm('¿Eliminar la ubicación @u.Ubicacion?');">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Nuevo -->
<div class="modal fade" id="mdlNew" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="CreateUbicacion">
                @Html.AntiForgeryToken()
                <div class="modal-header"><h5 class="modal-title">Nueva ubicación</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body vstack gap-3">
                    <div><label class="form-label req">Ubicación</label><input name="Ubicacion" class="form-control" required maxlength="40" /></div>
                    <div><label class="form-label req">Área</label><input name="Area" class="form-control" required maxlength="60" /></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Editar -->
<div class="modal fade" id="mdlEdit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="EditUbicacion">
                @Html.AntiForgeryToken()
                <div class="modal-header"><h5 class="modal-title">Editar ubicación</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body vstack gap-3">
                    <input type="hidden" name="Ubicacion" id="eUbic" />
                    <div><label class="form-label req">Área</label><input name="Area" id="eArea" class="form-control" required maxlength="60" /></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function(){
          if (window.jQuery && $.fn.DataTable) {
            $('#tbl').DataTable({responsive:true, pageLength:25, language:{url:'https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-MX.json'}});
          }
          const mdlEdit=document.getElementById('mdlEdit');
          mdlEdit.addEventListener('show.bs.modal',e=>{
            const b=e.relatedTarget;
            document.getElementById('eUbic').value=b.getAttribute('data-ubic');
            document.getElementById('eArea').value=b.getAttribute('data-area')||'';
          });
        })();
    </script>
    <style>
        .req::after {
            content: " *";
            color: #dc3545;
            font-weight: 700
        }</style>
}
