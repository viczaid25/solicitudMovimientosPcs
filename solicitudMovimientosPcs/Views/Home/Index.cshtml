@model solicitudMovimientosPcs.Models.ViewModels.HomeDashboardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Dashboard";
    var chartData = JsonSerializer.Serialize(Model.MyByStatus ?? new Dictionary<string, int>());
}

<div class="d-flex align-items-center mb-3">
    <div>
        <h2 class="mb-0">¡Hola, @Model.DisplayName!</h2>
        <div class="text-muted">Bienvenido al panel de Movimientos PCS</div>
    </div>
    <div class="ms-auto d-flex gap-2">
        <a class="btn btn-primary" asp-controller="Requests" asp-action="Create">
            <i class="fas fa-plus-circle me-1"></i> Nueva solicitud
        </a>
        <a class="btn btn-outline-primary" asp-controller="Requests" asp-action="My">
            <i class="fas fa-list me-1"></i> Mis solicitudes
        </a>
        <a class="btn btn-outline-primary" asp-controller="Aprobaciones" asp-action="Index">
            <i class="fas fa-inbox me-1"></i> Bandeja de aprobación
            @if (Model.PendingApprovalsTotal > 0)
            {
                <span class="badge bg-danger ms-1">@Model.PendingApprovalsTotal</span>
            }
        </a>
    </div>
</div>

<div class="row g-3">
    <!-- Tarjetas KPI -->
    <div class="col-6 col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3"><i class="fas fa-folder-open fa-lg text-primary"></i></div>
                <div>
                    <div class="text-muted small">Mis solicitudes</div>
                    <div class="h4 mb-0">@Model.MyTotal</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3"><i class="fas fa-hourglass-half fa-lg text-warning"></i></div>
                <div>
                    <div class="text-muted small">Abiertas</div>
                    <div class="h4 mb-0">@Model.MyOpen</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3"><i class="fas fa-check-circle fa-lg text-success"></i></div>
                <div>
                    <div class="text-muted small">Completadas</div>
                    <div class="h4 mb-0">@Model.MyCompleted</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3"><i class="fas fa-times-circle fa-lg text-danger"></i></div>
                <div>
                    <div class="text-muted small">Rech./Cancel.</div>
                    <div class="h4 mb-0">@Model.MyRejected</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Buscador rápido por ID -->
<div class="card mt-3">
    <div class="card-body">
        <form class="row g-2 align-items-center" method="get" asp-controller="Requests" asp-action="Details">
            <div class="col-12 col-md-auto">
                <label class="form-label mb-0">Ir al folio (ID):</label>
            </div>
            <div class="col-8 col-sm-6 col-md-3">
                <input name="id" type="number" min="1" class="form-control" placeholder="Ej. 1024" />
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-primary"><i class="fas fa-search me-1"></i> Abrir</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mt-1">
    <!-- Gráfica por estatus -->
    <div class="col-12 col-lg-6">
        <div class="card h-100">
            <div class="card-header custom-header-primary"><i class="fas fa-chart-pie me-2"></i> Mis solicitudes por estatus</div>
            <div class="card-body">
                <canvas id="chartStatus" height="180"></canvas>
                <div class="text-muted small mt-2">
                    *Incluye solo solicitudes donde tú eres el solicitante.
                </div>
            </div>
        </div>
    </div>

    <!-- Pendientes de aprobación -->
    <div class="col-12 col-lg-6">
        <div class="card h-100">
            <div class="card-header custom-header-primary"><i class="fas fa-bell me-2"></i> Pendientes de aprobación</div>
            <div class="card-body p-0">
                @if (Model.RecentPendingApprovals?.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Folio</th>
                                    <th>Fecha</th>
                                    <th>Solicitante</th>
                                    <th>Depto</th>
                                    <th>Urgencia</th>
                                    <th>Etapa</th>
                                    <th>Días</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model.RecentPendingApprovals)
                                {
                                    <tr>
                                        <td>@p.RequestId</td>
                                        <td>@p.Fecha.ToString("yyyy-MM-dd")</td>
                                        <td>@p.Solicitante</td>
                                        <td>@p.Departamento</td>
                                        <td>
                                            <span class="badge @(p.Urgencia switch {
                                                Urgencia.Critica => "bg-danger",
                                                Urgencia.Alta => "bg-warning text-dark",
                                                Urgencia.Media => "bg-info text-dark",
                                                _ => "bg-secondary"
                                            })">@p.Urgencia</span>
                                        </td>
                                        <td><span class="badge bg-primary">@p.Stage</span></td>
                                        <td>@p.AgeDays</td>
                                        <td class="text-end">
                                            <a asp-controller="AprobacionesEtapa" asp-action="Details" asp-route-id="@p.RequestId" class="btn btn-sm btn-outline-primary">
                                                Revisar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-3 text-muted">No hay pendientes de aprobación.</div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Mis últimas solicitudes -->
<div class="card mt-3">
    <div class="card-header custom-header-primary"><i class="fas fa-clock me-2"></i> Mis últimas solicitudes</div>
    <div class="card-body p-0">
        @if (Model.RecentMyRequests?.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Folio</th>
                            <th>Fecha</th>
                            <th>Depto</th>
                            <th>Línea</th>
                            <th>Urgencia</th>
                            <th>Estatus</th>
                            <th class="text-end">Items</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.RecentMyRequests)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.Fecha.ToString("yyyy-MM-dd")</td>
                                <td>@r.Departamento</td>
                                <td>@r.Linea</td>
                                <td>
                                    <span class="badge @(r.Urgencia switch {
                                        Urgencia.Critica => "bg-danger",
                                        Urgencia.Alta => "bg-warning text-dark",
                                        Urgencia.Media => "bg-info text-dark",
                                        _ => "bg-secondary"
                                    })">@r.Urgencia</span>
                                </td>
                                <td>
                                    <span class="badge @(r.RequestStatus switch {
                                        RequestStatus.Nuevo => "bg-secondary",
                                        RequestStatus.EnProceso => "bg-primary",
                                        RequestStatus.Completado => "bg-success",
                                        RequestStatus.Rechazado => "bg-danger",
                                        RequestStatus.Cancelado => "bg-dark",
                                        _ => "bg-light text-dark"
                                    })">@r.RequestStatus</span>
                                </td>
                                <td class="text-end">@r.ItemsCount</td>
                                <td class="text-end">
                                    <a asp-controller="Requests" asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Ver</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-3 text-muted">Aún no has creado solicitudes.</div>
        }
    </div>
</div>

@section Scripts {
    <script>
        (function(){
            const raw = @Html.Raw(chartData);
            const labels = Object.keys(raw);
            const values = labels.map(k => raw[k]);

            const ctx = document.getElementById('chartStatus');
            if (ctx && labels.length){
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels,
                        datasets: [{
                            label: 'Cantidad',
                            data: values
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            y: { beginAtZero: true, ticks: { precision:0 } }
                        }
                    }
                });
            }
        })();
    </script>
}
